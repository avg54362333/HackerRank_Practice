//Print sum, subtraction, multiply, and division

import java.util.*;
public class Arraybreak {
    public static void main(String[] args){
      int x, y=0;
      Scanner scanner = new Scanner(System.in);

      System.out.print("Please enter a number: ");
      x=scanner.nextInt();

      System.out.print("Please enter another number: ");
      y=scanner.nextInt();

      int sum =x+y;
      int sub = x-y;
      int mul = x*y;
      int div = x/y;

      System.out.println("Sum is: "+sum +" "+ "Subtraction is: "+sub +" "+ "Multiply is: "+mul+" " +"div is: "+div);


    }
}
